            <term xml:id="term-k000128-4" xml:lang="zh-latn-wadegile">chu-ch'u</term>
            <term xml:id="term-k000128-5" xml:lang="en" source="#biblk000128-2">base</term>
            <term xml:id="term-k000128-6" xml:lang="en" source="#biblk000128-3">boulder base</term>
            <term xml:id="term-k000128-7" xml:lang="en" source="#biblk000128-4">column base</term>
            <term xml:id="term-k000128-8" xml:lang="en" source="#biblk000128-5">pillar base</term>
            <term xml:id="term-k000128-9" xml:lang="en" source="#biblk000128-6">plinth</term>
            <term xml:id="term-k000128-10" xml:lang="en" source="#biblk000128-7">granite
