            <term xml:id="term-k000128-3" xml:lang="zh-latn-pinyin-nt" source="#biblk000128-1"
               >zhuchu</term>
            <term xml:id="term-k000128-1" xml:lang="zh-Hant">柱礎</term>
            <term xml:id="term-fk000128-2" xml:lang="zh-Hans">柱础</term>
            <term xml:id="term-k000128-13" xml:lang="zh-latn-pinyin" source="#biblk000128-1"
