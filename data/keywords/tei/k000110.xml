         <entryFree xml:id="k000110" type="architectural-feature">
            <term xml:id="term-k000110-8" xml:lang="zh-latn-pinyin-nt" type="preferred">wadang</term>
            <term xml:id="term-k000110-2" xml:lang="zh-Hant">瓦當</term>
            <term xml:id="term-k000110-3" xml:lang="zh-Hans">瓦当</term>
            <term xml:id="term-k000110-4" xml:lang="zh-latn-pinyin">wǎdàng</term>
