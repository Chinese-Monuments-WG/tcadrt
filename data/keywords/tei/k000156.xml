         <entryFree xml:id="k000156" type="architectural feature">
            <term xml:id="term-k000156-1" xml:lang="zh-latn-pinyin-nt" source="#biblk000156-2">linggong</term>
            <term xml:id="term-k000156-2" xml:lang="zh-Hant">令栱</term>
            <term xml:id="term-k000156-3" xml:lang="zh-Hans">令栱</term>
            <term xml:id="term-k000156-4" xml:lang="zh-latn-pinyin" source="#biblk000156-1">lìnggǒng</term>
            <term xml:id="term-k000156-5" xml:lang="zh-latn-wadegile" source="#biblk000156-3">ling-kung</term>
            <term xml:id="term-k000156-6" xml:lang="en" source="#biblk000156-4">order bracket-arm</term>
            <term xml:id="term-k000156-7" xml:lang="en" source="#biblk000156-5">lead bracket-arm</term>
            <term xml:id="term-k000156-8" xml:lang="en" source="#biblk000156-6">order-arm</term>
