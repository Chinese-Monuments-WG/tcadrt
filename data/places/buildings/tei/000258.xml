         <listPlace>
            <place xml:id="place-000258" type="schema:LandmarksOrHistoricalBuildings">
               <placeName xml:id="name000258-1" xml:lang="en">great hall</placeName>
               <placeName xml:id="name000258-2" type="building-name" xml:lang="zh-Hant">大殿</placeName>
               <placeName xml:id="name000258-3" type="building-name" xml:lang="zh-Hans">大殿</placeName>
