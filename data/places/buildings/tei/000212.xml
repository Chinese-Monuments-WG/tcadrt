            <place xml:id="place-000212" type="schema:LandmarksOrHistoricalBuildings">
               <placeName xml:id="name000212-1" xml:lang="en">Maitreya Pavilion</placeName>
               <placeName xml:id="name000212-2" type="building-name" xml:lang="zh-Hant">慈氏閣</placeName>
               <placeName xml:id="name000212-3" type="building-name" xml:lang="zh-Hans">慈氏阁</placeName>
